datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")  // classic Prisma 5 style
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  createdAt    DateTime  @default(now())
  products     Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  url         String
  title       String?
  description String?
  price       String?
  imageUrl    String?
  vendor      String?
  productType String?
  variants    String?
  options     String?
  createdAt   DateTime @default(now())

  userId Int?   // allow null for old rows
  user   User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
}

